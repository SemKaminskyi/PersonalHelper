<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_voda"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btn_clockwork"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/ic_clock1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_clock"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#60ffffff"
        android:text="@string/clock_WR"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_clockwork"
        app:layout_constraintStart_toStartOf="@+id/btn_clockwork"
        app:layout_constraintTop_toBottomOf="@+id/btn_clockwork" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="48dp"
        android:background="#9060605E"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintStart_toEndOf="@+id/btn_clockwork"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="0.464" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="36dp"
        android:background="#9060605E"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.464" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="92dp"
        android:background="#9060605E"
        android:text="@string/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clockwork" />


    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:background="#9060605E"
        android:text="@string/button"
        app:layout_constraintStart_toEndOf="@+id/btn_clockwork"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:background="#9060605E"
        android:text="@string/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="409dp"

        android:layout_height="320dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
